<%- layout('/layouts/boilerplate') %>

<div crossorigin="anonymous" id="map" class="mb-3 mt-3" style="width: 100%; height: 50vh;"></div>
    <% for(let campground of campgrounds) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4 px-0">
                    <img crossorigin="anonymous" class="img-fluid" src="<%= campground.images[0] ? campground.images[0].cardImage : '' %>" alt="Woodsy image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground.id %>">View <%= campground.title %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <script>    
        const mbxToken = '<%- process.env.MAPBOX_TOKEN %>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
    </script>
    <script src="/javascripts/showClusterMap.js"></script>