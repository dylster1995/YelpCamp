<%- layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form class="validated-form" action="/campgrounds" method="POST" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>  
                    <div class="valid-feedback">
                        Looks good.
                    </div>                  
                </div>
                <!-- <input type="file" name="images" multiple> -->
                <div class="mb-3">
                    <label for="images" class="form-label">Image(s)</label>
                    <input class="form-control" type="file" name="images" id="images" multiple required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
                    <div class="valid-feedback">
                        Looks good.
                    </div> 
                </div>        

                <div class="mb-3">
                    <label class="form-label" for="price">Price: </label>
                    <input class="form-control" type="text" name="campground[price]" id="price" required>
                    <div class="valid-feedback">
                        Looks good.
                    </div> 
                </div>        

                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks good.
                    </div> 
                </div> 
                <div class="mb-3">
                    <button class="btn btn-primary">Submit</button>
                </div>       
            </form>
        </div>
    </div>
