<%- layout('/layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3" style="width: 18rem;">
                <img src="<%= campgrounds.image %>" alt="<%= campgrounds.description %>">
                <div class="card-body">
                  <h5 class="card-title"><%= campgrounds.title %></h5>
                  <p class="card-text"><%= campgrounds.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%= campgrounds.location %></li>
                  <li class="list-group-item">$<%= campgrounds.price %> per night</li>
                  <li class="list-group-item">Vestibulum at eros</li>
                </ul>
                <div class="card-body">
                    <a class="btn btn-primary" href="/campgrounds">Back</a>
                    <a class="btn btn-warning" href="/campgrounds/<%= campgrounds.id %>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= campgrounds.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
              </div>
        </div>